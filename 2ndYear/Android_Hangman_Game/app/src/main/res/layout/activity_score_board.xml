<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scoreBoard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreBoardActivity">

    <ScrollView
        android:id="@+id/Continue"
        android:layout_width="383dp"
        android:layout_height="636dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:scrollbarSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblScoreTitle">

        <LinearLayout
            android:id="@+id/playersScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/lblScoreTitle"
        android:layout_width="426dp"
        android:layout_height="63dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/aladin"
        android:text="Goblin Guy Grug Ongoing Attempts"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBackScore"
        android:layout_width="404dp"
        android:layout_height="54dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="10dp"
        android:text="Close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Continue" />
</androidx.constraintlayout.widget.ConstraintLayout>